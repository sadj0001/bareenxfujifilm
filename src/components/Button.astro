---
const { text, href } = Astro.props;
---

<a href={href}>
  <button class="button">
    {text}
  </button>
</a>

<style>
  .button {
    width: 150px;
    height: 40px;

    background-color: #000;
    box-shadow: -5px 5px 7px 2px rgba(249, 249, 249, 0.75);

    text-align: center;
    cursor: pointer;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 0.9rem;
    margin-top: 1.5rem;
    color: white;
  }

  .button:hover {
    background-color: #ffffff;
    color: black;
  }

  .text {
    color: white;
  }
</style>
