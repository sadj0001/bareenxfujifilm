---
const { data } = Astro.props;
import ProductColor from "./ProductColor.astro";
---

<article>
  <img class="hjerte" src="hjerte.png" alt="hjerte" />
  <img src={data.image} alt=`Image of ${data.products}` />
  <div class="card_tekst">
    <p>{`${data.name} - ${data.collection}`}</p>
    <p>{data.price} kr</p>
    <p><a href=`/products/${data.slug}`>LÃ¦s mere</a></p>
  </div>
</article>

<style>
  a {
    text-decoration: none;
    color: black;
  }

  article {
    min-width: 300px;
    max-width: 350px;
    border-style: solid;
    border-width: 1px;
    border-color: rgb(195, 195, 195);
    position: relative;
  }
  .card_tekst {
    padding-left: 1rem;
    padding-top: 1rem;
  }
  .hjerte {
    position: absolute;
    width: 20px;
    right: 12px;
    padding-top: 12px;
  }

  p {
    font-size: var(--font-size-p-mobil);
  }
</style>
